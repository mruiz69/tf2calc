<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#34302d">

    <FrameLayout
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6b6a65">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/sawmill" />
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">
        <TableRow tools:ignore="UselessParent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                />
            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/elegir_imagen_de_perfil"
                android:textColor="#ede7d1"
                android:backgroundTint="#7c7268"
                android:fontFamily="@font/tf2build"
                android:layout_gravity="center"
                android:textSize="19sp"/>
            <Button
                android:id="@+id/buttonMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#7c7268"
                android:textColor="#ede7d1"
                android:fontFamily="@font/tf2build"
                android:layout_marginStart="2dp"
                android:text="@string/mapa"
                android:textSize="19sp"/>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#E634302d"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="70dp">
            <LinearLayout
                android:id="@+id/calculador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#ede7d1"
                    android:textSize="27sp"
                    android:fontFamily="@font/tf2build"
                    android:text="@string/calculadora_de_valor"
                    android:layout_marginBottom="15dp"/>
                <Button
                    android:id="@+id/botonItems"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="48dp"
                    android:backgroundTint="#7c7268"
                    android:textColor="#ede7d1"
                    android:text="@string/registrar_armas"
                    android:textSize="19sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/tf2build"
                    />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/tf2key"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/Llaves"
                    android:inputType="number"
                    android:layout_width="190dp"
                    android:layout_height="64dp"
                    android:importantForAutofill="no"
                    android:textAlignment="center"
                    android:fontFamily="@font/tf2build"
                    android:background="#fdeecf"
                    android:textColorHint="#34302d"
                    android:textColor="#34302d"
                    android:textSize="31sp"
                    android:layout_gravity="center"
                    android:hint="@string/cantidad" />

                <Button
                    android:id="@+id/buttonConvertir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7c7268"
                    android:textColor="#ede7d1"
                    android:fontFamily="@font/tf2build"
                    android:layout_gravity="center"
                    android:text="@string/convetir_a_metal"
                    android:textSize="19sp"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E634302d"
            app:cardCornerRadius="12dp"
            android:layout_gravity="center_horizontal">
            <TableLayout
                android:layout_marginVertical="5dp"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ede7d1"
                        android:textSize="27sp"
                        android:fontFamily="@font/tf2build"
                        android:layout_gravity="center"
                        android:text="@string/compra"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ede7d1"
                        android:textSize="27sp"
                        android:fontFamily="@font/tf2build"
                        android:layout_gravity="center"
                        android:text="@string/venta"/>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/ResultadoCompra"
                        android:layout_height="48dp"
                        android:paddingHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:background="#fdeecf"
                        android:fontFamily="@font/tf2build"
                        android:hint="@string/_0"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:minWidth="48dp"
                        android:textAlignment="center"
                        android:textColor="#34302d"
                        android:textColorHint="#34302d"
                        android:textSize="31sp"
                        tools:ignore="DuplicateSpeakableTextCheck" />
                    <EditText
                        android:inputType="numberDecimal"
                        android:hint="@string/_0"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColorHint="#34302d"
                        android:id="@+id/ResultadoVenta"
                        android:minWidth="48dp"
                        android:paddingHorizontal="10dp"
                        android:layout_height="48dp"
                        android:layout_width="wrap_content"
                        android:importantForAutofill="no"
                        android:textAlignment="center"
                        android:fontFamily="@font/tf2build"
                        android:background="#fdeecf"
                        android:textColor="#34302d"
                        android:textSize="31sp"
                        android:layout_gravity="center"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ede7d1"
                        android:textSize="27sp"
                        android:fontFamily="@font/tf2build"
                        android:layout_gravity="center"
                        android:text="@string/ref"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ede7d1"
                        android:textSize="27sp"
                        android:fontFamily="@font/tf2build"
                        android:layout_gravity="center"
                        android:text="@string/ref"/>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E634302d"
            app:cardCornerRadius="12dp"
            android:layout_gravity="center_horizontal">
            <TableLayout
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow>
                    <androidx.cardview.widget.CardView
                        android:backgroundTint="#f5e7de"
                        app:cardCornerRadius="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginEnd="25dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ref"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                        <TextView
                            android:id="@+id/cantidadRefCompra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/tf2build"
                            android:text="@string/x"
                            android:layout_gravity="center"
                            android:textColor="#34302d"
                            android:textSize="27sp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:backgroundTint="#f5e7de"
                        app:cardCornerRadius="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/cantidadRefVenta"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:fontFamily="@font/tf2build"
                            android:text="@string/x"
                            android:layout_gravity="center"
                            android:textColor="#34302d"
                            android:textSize="27sp"
                            />
                        <ImageView
                            android:layout_marginEnd="25dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ref"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>

                </TableRow>
                <TableRow>
                    <androidx.cardview.widget.CardView
                        android:backgroundTint="#f5e7de"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginEnd="25dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/rec"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                        <TextView
                            android:id="@+id/cantidadRecCompra"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:textColor="#34302d"
                            android:textSize="27sp"
                            android:fontFamily="@font/tf2build"
                            android:layout_gravity="center"
                            android:text="@string/x" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:backgroundTint="#f5e7de"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginEnd="25dp"
                            android:importantForAccessibility="no" android:src="@drawable/rec"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                        <TextView
                            android:id="@+id/cantidadRecVenta"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:textColor="#34302d"
                            android:textSize="27sp"
                            android:fontFamily="@font/tf2build"
                            android:layout_gravity="center"
                            android:text="@string/x" />
                    </androidx.cardview.widget.CardView>
                </TableRow>

                <TableRow>
                    <androidx.cardview.widget.CardView
                        android:backgroundTint="#f5e7de"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginEnd="25dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/scrap"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                        <TextView
                            android:id="@+id/cantidadScpCompra"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:textColor="#34302d"
                            android:textSize="27sp"
                            android:fontFamily="@font/tf2build"
                            android:layout_gravity="center"
                            android:text="@string/x" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:backgroundTint="#f5e7de"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginEnd="25dp"
                            android:importantForAccessibility="no" android:src="@drawable/scrap"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                        <TextView
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="5dp"
                            android:id="@+id/cantidadScpVenta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:textColor="#34302d"
                            android:textSize="27sp"
                            android:fontFamily="@font/tf2build"
                            android:layout_gravity="center"
                            android:text="@string/x"/>
                    </androidx.cardview.widget.CardView>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>
</ScrollView>